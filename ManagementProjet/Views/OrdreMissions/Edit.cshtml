@model ManagementProjet.Models.OrdreMission

@{
    ViewData["Title"] = "Edit";
    <!-- Select2 -->
    <link href="~/AdminTemplate/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/AdminTemplate/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
}
<br />
<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Modifier Ordre Mission</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumbv2 breadcrumb float-sm-right ">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index","OrdreMissions")">
                        <i class="fas fa-table"></i> List Ordre Mission
                    </a>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="container-fluid">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <label asp-for="Code">Code</label>
                                    <input asp-for="Code" class="form-control" placeholder="Enter code" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="DateMission">Date Mission</label>
                                    <input asp-for="DateMission" class="form-control" placeholder="Enter Date Mission" />
                                    <span asp-validation-for="DateMission" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="VehiculeId">Libelle</label>
                                    <select asp-for="VehiculeId" class="form-control select2bs4" asp-items="ViewBag.VehiculeId">
                                        <option> Saisie Labelle</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="VehiculeId">Matricule</label>
                                    <select asp-for="VehiculeId" class="form-control" asp-items="ViewBag.VehiculeIdV2">
                                        <option> Saisie Matricule</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label asp-for="Conducteur">Conducteur</label>
                                        <input asp-for="Conducteur" class="form-control" placeholder="Enter Conducteur" />
                                        <span asp-validation-for="Conducteur" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="NumPermis" class="control-label">Num Permis</label>
                                    <input asp-for="NumPermis" class="form-control" placeholder="Enter NumPermis." />
                                    <span asp-validation-for="NumPermis" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="CIN" class="control-label">CIN</label>
                                    <input asp-for="CIN" class="form-control" placeholder="Enter CIN." />
                                    <span asp-validation-for="CIN" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Destinations">Destinations</label>
                            <input asp-for="Destinations" class="form-control" placeholder="Enter Destinations" />
                            <span asp-validation-for="Destinations" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="CompteurInit">Compteur Init</label>
                                    <input asp-for="CompteurInit" class="form-control" placeholder="Enter Compteur Init" />
                                    <span asp-validation-for="CompteurInit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CompteurFinal">Compteur Final</label>
                                    <input asp-for="CompteurFinal" class="form-control" placeholder="Enter CompteurFinal" />
                                    <span asp-validation-for="CompteurFinal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- general form elements disabled -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Autre Information</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="DateDepart">Date Depart</label>
                                    <input asp-for="DateDepart" class="form-control" placeholder="Enter Date Depart" />
                                    <span asp-validation-for="DateDepart" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="DateRetour">Date Retour</label>
                                    <input asp-for="DateRetour" class="form-control" placeholder="Enter DateRetour" />
                                    <span asp-validation-for="DateRetour" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="LibelleMission1">Libelle Mission1</label>
                                    <input asp-for="LibelleMission1" class="form-control" placeholder="Enter Libelle Mission1" />
                                    <span asp-validation-for="LibelleMission1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="LibelleMission2">Libelle Mission2</label>
                                    <input asp-for="LibelleMission2" class="form-control" placeholder="Enter Libelle Mission2" />
                                    <span asp-validation-for="LibelleMission2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="LibelleMission3">Libelle Mission3</label>
                                    <input asp-for="LibelleMission3" class="form-control" placeholder="Enter Libelle Mission3" />
                                    <span asp-validation-for="LibelleMission3" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DetailsMission">Details Mission</label>
                            <textarea asp-for="DetailsMission" class="form-control" rows="4" placeholder="Enter Details Mission"></textarea>
                            <span asp-validation-for="DetailsMission" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="FraisMission1">Frais Mission1</label>
                                    <input asp-for="FraisMission1" class="form-control" placeholder="Enter Frais Mission1" />
                                    <span asp-validation-for="FraisMission1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="FraisMission2">Frais Mission2</label>
                                    <input asp-for="FraisMission2" class="form-control" placeholder="Enter Frais Mission2" />
                                    <span asp-validation-for="FraisMission2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="FraisMission3">Frais Mission3</label>
                                    <input asp-for="FraisMission3" class="form-control" placeholder="Enter Frais Mission3" />
                                    <span asp-validation-for="FraisMission3" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info btn-flat">Ajouter</button>
                        <a asp-action="Index" class="btn btn-danger btn-flat">Annuler</a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </form>

</div>
@section Scripts{
    <!-- Select2 -->
    <script src="~/AdminTemplate/plugins/select2/js/select2.full.min.js"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

        })
    </script>
}