@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "list Roles";
    <style>
        .paddingCard {
            padding: 10px 10px;
        }
    </style>
}
    <div class="container">
        <br />
        <center>
            <h1> @ViewData["Title"] </h1>
        </center>
        <div>
            <a class="btn btn-outline-dark" asp-controller="Administration" asp-action="CreateRole">
                create role
            </a>
        </div>
        <div class="row">
            @if (Model.Any())
            {
                foreach (var role in Model)
                {
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 paddingCard">
                        <div class="card">
                            <div class="card-header">
                                Role Id : @role.Id
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    @role.Name
                                </h5>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-success" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">
                                    Edit
                                </a>
                                <a class="btn btn-outline-danger" href="#">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>

                }
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        No Roles Created yet
                    </div>
                    <div class="card-body">
                        <h5>
                            Use The Button below to create a role
                        </h5>
                        <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">
                            create role
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

