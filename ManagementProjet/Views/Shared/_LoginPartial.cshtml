@using Microsoft.AspNetCore.Identity
@using ManagementProjet.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <style>
        .padding1 {
            padding-right: 5px;
            padding-left: 5px;
            text-decoration: none!important;
        }
        .marginli1 {
            margin-top: 8px;
        }
    </style>


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="marginli1">
                <a asp-area="" asp-controller="Manage" asp-action="Index" class="padding1" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link padding1">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="padding1">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="padding1">Log in</a></li>
    </ul>
}
